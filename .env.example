# Django
DJANGO_SETTINGS_MODULE=leave_management.settings_production
SECRET_KEY=change-me-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# For DigitalOcean, attaching a Managed MySQL will auto-populate DATABASE_URL.
# For local dev, you can leave this blank to use SQLite or set a local MySQL URL.
DATABASE_URL=

# CORS/CSRF (adjust for your domains)
CORS_ALLOWED_ORIGINS=http://127.0.0.1:3000,http://localhost:3000
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000,http://localhost:8000

# Optional: run seeding during deploy (idempotent)
RUN_SEED_ON_DEPLOY=0
# Optional: JSON array for bulk user seeding when RUN_SEED_ON_DEPLOY=1
# Example:
# SEED_USERS=[{"username":"manager1","first_name":"Ato","last_name":"Lastname","email":"manager1@example.com","role":"manager","department":"IT","password":"<set-at-deploy>"}]
SEED_USERS=
